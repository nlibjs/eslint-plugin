{
  "name": "@nlib/eslint-plugin",
  "publishConfig": {
    "access": "public"
  },
  "version": "1.1.2",
  "license": "Apache-2.0",
  "author": {
    "name": "Kei Ito",
    "email": "kei.itof@gmail.com",
    "url": "https://github.com/gjbkz"
  },
  "homepage": "https://github.com/nlibjs/eslint-plugin",
  "repository": "https://github.com/nlibjs/eslint-plugin",
  "engines": {
    "node": ">=12"
  },
  "type": "module",
  "main": "./index.cjs",
  "exports": {
    "import": "./index.mjs",
    "require": "./index.cjs"
  },
  "files": [
    "index.mjs",
    "index.cjs"
  ],
  "scripts": {
    "lint": "eslint --ext .mjs --ext .cjs index.mjs index.cjs test",
    "test": "node test/no-globals.test.mjs",
    "version": "npx @nlib/changelog --output CHANGELOG.md && git add CHANGELOG.md"
  },
  "peerDependencies": {
    "eslint": ">= 8"
  },
  "devDependencies": {
    "@nlib/changelog": "0.3.1",
    "@nlib/githooks": "0.2.0",
    "@nlib/lint-commit": "1.0.1",
    "@types/eslint": "8.56.2",
    "@types/node": "20.11.0",
    "@typescript-eslint/parser": "6.18.1",
    "@typescript-eslint/types": "6.18.1",
    "eslint": "8.56.0",
    "lint-staged": "15.2.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.2.1",
    "typescript": "5.3.3"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "plugins": [
      "@nlib"
    ],
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "es2020": true,
      "node": true
    },
    "rules": {
      "@nlib/print-filename": "warn"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.*(m|c)+(j|t)s*(x)": "eslint"
  },
  "renovate": {
    "extends": [
      "github>nlibjs/renovate-config"
    ]
  }
}
