{
    "name": "@nlib/eslint-plugin",
    "publishConfig": {
        "access": "public"
    },
    "version": "1.0.17",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/gjbkz"
    },
    "homepage": "https://github.com/nlibjs/eslint-plugin",
    "repository": "https://github.com/nlibjs/eslint-plugin",
    "engines": {
        "node": ">=12"
    },
    "main": "./index.js",
    "exports": {
        ".": "./index.js",
        "./package.json": "./package.json"
    },
    "files": [
        "index.js",
        "index.d.ts"
    ],
    "scripts": {
        "lint": "eslint index.js index.d.ts test",
        "test": "ts-node test/no-globals.test.ts",
        "version": "run-s version:changelog version:add",
        "version:changelog": "npx @nlib/changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "peerDependencies": {
        "eslint": ">= 7"
    },
    "devDependencies": {
        "@nlib/githooks": "0.1.0",
        "@nlib/lint-commit": "0.1.8",
        "@types/eslint": "8.2.1",
        "@types/node": "16.11.12",
        "@typescript-eslint/eslint-plugin": "5.6.0",
        "@typescript-eslint/parser": "5.6.0",
        "eslint": "8.4.1",
        "lint-staged": "12.1.2",
        "npm-run-all": "4.1.5",
        "ts-node": "10.4.0",
        "typescript": "4.5.3"
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended"
        ],
        "parserOptions": {
            "sourceType": "module"
        },
        "env": {
            "es2020": true,
            "node": true
        },
        "overrides": [
            {
                "files": [
                    "*.ts"
                ],
                "extends": [
                    "plugin:@typescript-eslint/recommended"
                ],
                "parser": "@typescript-eslint/parser",
                "plugins": [
                    "@typescript-eslint"
                ]
            }
        ]
    },
    "lint-staged": {
        "*.{ts,tsx,js,mjs,cjs,jsx}": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
