{
    "name": "@nlib/eslint-plugin",
    "publishConfig": {
        "access": "public"
    },
    "version": "1.1.1",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/gjbkz"
    },
    "homepage": "https://github.com/nlibjs/eslint-plugin",
    "repository": "https://github.com/nlibjs/eslint-plugin",
    "engines": {
        "node": ">=12"
    },
    "type": "module",
    "main": "./index.cjs",
    "exports": {
        "import": "./index.mjs",
        "require": "./index.cjs"
    },
    "files": [
        "index.mjs",
        "index.cjs"
    ],
    "scripts": {
        "lint": "eslint --ext .mjs index.mjs test",
        "test": "node test/no-globals.test.mjs",
        "version": "run-s version:changelog version:add",
        "version:changelog": "npx @nlib/changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "peerDependencies": {
        "eslint": ">= 8"
    },
    "devDependencies": {
        "@nlib/githooks": "0.1.0",
        "@nlib/lint-commit": "0.1.8",
        "@types/eslint": "8.4.2",
        "@typescript-eslint/parser": "5.22.0",
        "eslint": "8.14.0",
        "lint-staged": "12.4.1",
        "npm-run-all": "4.1.5",
        "typescript": "4.6.4"
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended"
        ],
        "parserOptions": {
            "sourceType": "module"
        },
        "env": {
            "es2020": true,
            "node": true
        }
    },
    "lint-staged": {
        "*.{ts,tsx,js,mjs,cjs,jsx}": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
