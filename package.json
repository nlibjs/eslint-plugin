{
    "name": "@nlib/eslint-plugin",
    "publishConfig": {
        "access": "public"
    },
    "version": "1.0.15",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "homepage": "https://github.com/nlibjs/eslint-plugin",
    "repository": "https://github.com/nlibjs/eslint-plugin",
    "engines": {
        "node": ">=12"
    },
    "main": "./index.js",
    "exports": {
        ".": "./index.js",
        "./package.json": "./package.json"
    },
    "files": [
        "index.js",
        "index.d.ts"
    ],
    "scripts": {
        "lint": "eslint index.js index.d.ts test",
        "test": "ts-node test/no-globals.test.ts",
        "version": "run-s version:changelog version:add",
        "version:changelog": "npx @nlib/changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "peerDependencies": {
        "eslint": ">= 7"
    },
    "devDependencies": {
        "@nlib/githooks": "0.1.0",
        "@types/eslint": "7.28.0",
        "@types/node": "16.9.1",
        "@typescript-eslint/eslint-plugin": "4.31.0",
        "@typescript-eslint/parser": "4.31.0",
        "eslint": "7.32.0",
        "lint-staged": "11.1.2",
        "npm-run-all": "4.1.5",
        "ts-node": "10.2.1",
        "typescript": "4.4.2"
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended"
        ],
        "parserOptions": {
            "sourceType": "module"
        },
        "env": {
            "es2020": true,
            "node": true
        },
        "overrides": [
            {
                "files": [
                    "*.ts"
                ],
                "extends": [
                    "plugin:@typescript-eslint/recommended"
                ],
                "parser": "@typescript-eslint/parser",
                "plugins": [
                    "@typescript-eslint"
                ]
            }
        ]
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ],
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
