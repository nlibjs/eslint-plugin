{
    "name": "@nlib/eslint-plugin",
    "publishConfig": {
        "access": "public"
    },
    "version": "1.0.12",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "homepage": "https://github.com/nlibjs/eslint-plugin",
    "repository": "https://github.com/nlibjs/eslint-plugin",
    "engines": {
        "node": ">=12"
    },
    "main": "./index.js",
    "exports": {
        ".": "./index.js",
        "./package.json": "./package.json"
    },
    "files": [
        "index.js",
        "index.d.ts"
    ],
    "scripts": {
        "test": "ts-node test/no-globals.test.ts",
        "version": "run-s version:changelog version:add",
        "version:changelog": "nlib-changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "peerDependencies": {
        "eslint": ">= 3"
    },
    "devDependencies": {
        "@nlib/changelog": "0.1.9",
        "@nlib/githooks": "0.0.5",
        "@nlib/lint-commit": "0.1.4",
        "@types/eslint": "7.2.13",
        "@types/node": "15.12.4",
        "@typescript-eslint/parser": "4.28.0",
        "eslint": "7.29.0",
        "lint-staged": "11.0.0",
        "npm-run-all": "4.1.5",
        "ts-node": "9.1.1",
        "typescript": "4.3.4"
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ],
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
